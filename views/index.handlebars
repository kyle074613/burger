<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat Da Burger</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 burgers-fresh">
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">{{burger}}
                    <button data-burgerid="{{id}}" class="devour-burger">
                        Devour!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6 burgers-devoured">
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">{{burger}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h2>Which burger do you want?</h2>
            <form class="burger-input">
                <textarea type="text" name="new-burger"></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

</div>