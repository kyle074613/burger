<div class="jumbotron jumbotron-fluid text-center py-4">
    <div class="container">
        <img src="assets/burger.png" alt="Burger" id="burgerImage">
        <h1 class="display-4">Eat Da Burger</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 burgersFresh">
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">{{burger_name}}
                    <button data-burgerid="{{id}}" class="devourBurger">
                        Devour!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6 burgersDevoured">
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <h4>Which burger do you want?</h4>
    </div>
    <div class="row text-center">
        <div class="col">
            <form class="burgerInput">
                <div class="row mt-2 justify-content-center">
                    <textarea type="text" class="newBurger" name="burger"></textarea>
                </div>
                <div class="row mt-2 justify-content-center">
                    <button type="submit" class="submitButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>